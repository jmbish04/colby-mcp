{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "WebWorker"],
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@modelcontextprotocol/sdk/server/*": [
        "node_modules/@modelcontextprotocol/sdk/dist/esm/server/*"
      ],
      "@modelcontextprotocol/sdk/shared/*": [
        "node_modules/@modelcontextprotocol/sdk/dist/esm/shared/*"
      ],
      "@modelcontextprotocol/sdk/types": [
        "node_modules/@modelcontextprotocol/sdk/dist/esm/types"
      ]
    }
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
